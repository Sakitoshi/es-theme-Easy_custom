<!--
theme name:		Easy Custom
version:		1.0
author:			Sakitoshi
-->

<theme>

	<formatVersion>4</formatVersion>

	<include>./custom.xml</include>

	<view name="system, basic, detailed, video, grid">

		<image name="background" extra="true">
			<path>./_background/background.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
		</image>

		<helpsystem name="help">
			<pos>0.014 0.96</pos>
			<fontPath>./_inc/fonts/OpenSans-Semibold.ttf</fontPath>
			<fontSize>0.03</fontSize>
		</helpsystem>

		<text name="systemInfo">
			<pos>0 0.615</pos>
			<fontPath>./_inc/fonts/OpenSans-Light.ttf</fontPath>
			<fontSize>0.04</fontSize>
		</text>

	</view>

	<view name="basic, detailed, video, grid">

		<image name="background">
			<default>./_background/background.png</default>
			<path>./_background/${system.theme}.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<zIndex>1</zIndex>
		</image>

	</view>

	<view name="basic">

			<image name="logo">
				<origin>0.5 0.5</origin>
				<pos>0.5 0.12</pos>
				<maxSize>0.36 0.22</maxSize>
			</image>

			<textlist name="gamelist">
				<fontPath>./_inc/fonts/OpenSans-Regular.ttf</fontPath>
				<pos>0.01 0.24</pos>
				<size>0.98 0.68</size>
				<fontSize>0.04</fontSize>
			</textlist>

	</view>

	<view name="detailed, video">
		
			<image name="logo">
				<origin>0.5 0.5</origin>
				<pos>0.22 0.12</pos>
				<maxSize>0.36 0.22</maxSize>
			</image>

			<textlist name="gamelist">
				<fontPath>./_inc/fonts/OpenSans-Regular.ttf</fontPath>
				<pos>0.04 0.24</pos>
				<size>0.36 0.67</size>
				<fontSize>0.04</fontSize>
				<horizontalMargin>0.01</horizontalMargin>
			</textlist>
		
			<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
				<forceUppercase>1</forceUppercase>
				<fontPath>./_inc/fonts/OpenSans-Semibold.ttf</fontPath>
				<fontSize>0.028</fontSize>
				<size>0.20 0.01</size>
			</text>

			<text name="md_developer, md_publisher, md_genre, md_players, md_playcount">
				<forceUppercase>0</forceUppercase>
				<fontPath>./_inc/fonts/OpenSans-Regular.ttf</fontPath>
				<fontSize>0.025</fontSize>
				<size>0.17 0.02</size>
			</text>

			<datetime name="md_releasedate, md_lastplayed">
				<forceUppercase>0</forceUppercase>
				<fontPath>./_inc/fonts/OpenSans-Regular.ttf</fontPath>
				<fontSize>0.025</fontSize>
				<size>0.17 0.02</size>
			</datetime>

			<text name="md_lbl_rating">
				<pos>0.748 0.11</pos>
			</text>
			<rating name="md_rating">
				<pos>0.758 0.13</pos>
				<size>0.17 0.03</size>
				<filledPath>./_inc/images/star_full.png</filledPath>
				<unfilledPath>./_inc/images/star_hollow.png</unfilledPath>
			</rating>

			<text name="md_lbl_players">
				<pos>0.748 0.18</pos>
			</text>
			<text name="md_players">
				<pos>0.758 0.20</pos>
			</text>

			<text name="md_lbl_genre">
				<pos>0.748 0.24</pos>
			</text>
			<text name="md_genre">
				<pos>0.758 0.26</pos>
			</text>

			<text name="md_lbl_developer">
				<pos>0.748 0.30</pos>
			</text>
			<text name="md_developer">
				<pos>0.758 0.32</pos>
			</text>

			<text name="md_lbl_publisher">
				<pos>0.748 0.36</pos>
			</text>
			<text name="md_publisher">
				<pos>0.758 0.38</pos>
			</text>

			<text name="md_lbl_releasedate">
				<pos>0.748 0.42</pos>
			</text>
			<datetime name="md_releasedate">
				<pos>0.758 0.44</pos>
			</datetime>

			<text name="md_lbl_playcount">
				<pos>0.748 0.48</pos>
			</text>
			<text name="md_playcount">
				<pos>0.758 0.50</pos>
			</text>

			<text name="md_lbl_lastplayed">
				<pos>0.748 0.54</pos>
			</text>
			<datetime name="md_lastplayed">
				<pos>0.758 0.56</pos>
			</datetime>
		
			<text name="md_description">
				<pos>0.466 0.682</pos>
				<size>0.476 0.195</size>
				<fontPath>./_inc/fonts/OpenSans-Regular.ttf</fontPath>
				<fontSize>0.028</fontSize>
				<alignment>left</alignment>
				<forceUppercase>0</forceUppercase>
				<lineSpacing>1.6</lineSpacing>
			</text>

	</view>

	<view name="detailed">

			<image name="md_image">
				<origin>0.5 0.5</origin>
				<pos>0.578 0.342</pos>
				<maxSize>0.26 0.563</maxSize>
			</image>
		
	</view>

	<view name="video">

		<video name="md_video">
			<pos>0.578 0.342</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.26 0.563</maxSize>
			<delay>2</delay>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>true</showSnapshotDelay>
		</video>

		<image name="md_marquee">
			<pos>0.578 0.122</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.25 0.18</maxSize>
		</image>

	</view>

	<view name="grid">

		<image name="logo">
			<origin>0.5 0.5</origin>
			<pos>0.5 0.12</pos>
			<maxSize>0.36 0.22</maxSize>
		</image>

		<text name="md_name">
			<pos>0.011 -0.068</pos>
			<size>0.98 0.68</size>
			<fontPath>./_inc/fonts/OpenSans-Regular.ttf</fontPath>
			<fontSize>0.04</fontSize>
		</text>

	</view>

</theme>
